[colors]
background = "#991d1f21"
foreground = "#e6d2af"
primary = "${xrdb:color4}"
alert = "ff0000"

[bar/topbar]
width = 100%
height = 32
offset-y = 0
offset-x = 0
radius = 0.0
fixed-center = true
override-redirect = false
background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-color = #00000000

padding-left = 4
padding-right = 4

module-margin-left = 4
module-margin-right = 4

font-0 = VictorMono Nerd Font:stlye=Bold:antialias=true:size=13
font-1 = VictorMono Nerd:style=Regular:size=22.5

modules-left = i3 cpu memory temperature 
modules-center = date
modules-right = clementine volume
tray-position = none
tray-padding = 4
tray-maxsize = 0


[module/i3]
type = internal/i3
format = <label-state> <label-mode>

;scroll function rules
wrapping-scroll = false

;label mode


;icons
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-6 = 6;
ws-icon-7 = 7;
ws-icon-8 = 8;


; seperator
label-separator = .
label-separator-padding = 1
label-separator-foreground = ${colors.background}

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "  "
label = %percentage:2%%
format-padding = 3

